@model Umbraco.Cms.Web.Common.PublishedModels.ContactUsBlock

<section class="contact-us-block">
    <div class="container">
        <div class="contact-us-image">
            <img src="@Model.Image.Url()" alt="@Model.Image.Name"/>
        </div>
        <div class="contact-us-info">
            <h2>@Model.Title</h2>

            <div class="contact-items">
                <div class="contact-item">
                    <div class="contact-icon">
                        <i class="fa-light fa-location-dot"></i>
                    </div>
                    <div class="contact-item-text">
                        <p class="contact-us-info-title">Office location</p>
                        <p class="contact-us-info-text">@Model.OfficeLocation</p>
                    </div>
                </div>

                <div class="contact-item">
                    <div class="contact-icon">
                        <i class="fa-light fa-phone"></i>
                    </div>
                    <div class="contact-item-text">
                        <p class="contact-us-info-title">Phone Number</p>
                        <p class="contact-us-info-text">@Model.PhoneNumber</p>
                    </div>
                </div>
                
                <div class="contact-item">
                    <div class="contact-icon">
                        <i class="fa-light fa-envelope"></i>
                    </div>
                    <div class="contact-item-text">
                        <p class="contact-us-info-title">E-mail address</p>
                        <p class="contact-us-info-text">@Model.EmailAddress</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
